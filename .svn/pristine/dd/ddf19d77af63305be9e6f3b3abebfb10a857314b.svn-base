// Function to convert user's number from it's old base to base 10. It returns digitOne
void anyBaseToTen(int& num, int& oldBase, int& digitOne) 
{
	int placeOne = 1;

	digitOne = 0;

	while (num != 0)

	{ 
   	   digitOne = digitOne + num % 10 * placeOne;
   	   num = num/10;
   	   placeOne = placeOne * oldBase;
    }
}

